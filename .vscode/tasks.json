{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "generate",
            "type": "shell",
            "command": "dotnet.exe",
            "args": [
                "run",
                "--",
                "-ns",
                "NWindowsKits",
                "-dll",
                "user32",
                "-d",
                "${workspaceFolder}/NWindowsKits",
                "-h",
                "C:/Program Files (x86)/Windows Kits/10/Include/10.0.18362.0/um/Windows.h",
                "-h",
                "C:/Program Files (x86)/Windows Kits/10/Include/10.0.18362.0/um/winuser.h"
            ],
            "options": {
                "cwd": "${workspaceFolder}/../ClangCaster/ClangCaster",
                "env": {
                    "PATH": "${env:PATH};C:\\Program Files\\LLVM\\bin"
                }
            },
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "build",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                // Ask dotnet build to generate full paths for file names.
                "/property:GenerateFullPaths=true",
                // Do not generate summary otherwise it leads to duplicate errors in Problems panel
                "/consoleloggerparameters:NoSummary"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        }
    ]
}